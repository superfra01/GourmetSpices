<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Gourmet_Spices</display-name>

  <welcome-file-list>
    <welcome-file>HomePage.jsp</welcome-file>
  </welcome-file-list>

  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/GourmetSpicesDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <servlet>
    <servlet-name>SingInServlet</servlet-name>
    <servlet-class>control.SingInServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SingInServlet</servlet-name>
    <url-pattern>/GourmetSpices/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>control.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/GourmetSpices/login</url-pattern>
  </servlet-mapping>
</web-app>